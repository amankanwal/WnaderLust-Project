<%- layout("./layouts/boilerplate")%>
<body>
    <div class="form">
       <h2>Add New Listing</h2>
       <br><br>
        <form action="http://localhost:8080/listings" method="post" novalidate   class="needs-validation border" enctype="multipart/form-data"> 
            <div>
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" name="newList[title]" placeholder="title" id="title" required>

                <div class="invalid-feedback">Enter a title</div>
            </div>
                
            <div>
                <label  class="form-label" for="description">Description</label>
                <textarea  class="form-control" type="text" placeholder="description" name="newList[description]" id="description" required> </textarea>

                <div class="invalid-feedback">Enter a title</div>
            </div>
            <div>
                <label class="form-label"  for="image">Image</label><br>
                <input  class="form-control" type="file" name="newList[image]" placeholder="upload image" id="image">
            </div>
           <div class="row">
                <div class="col-md-4">
                    <label class="form-label"  for="price">Price</label>
                    <input class="form-control"  type="text" name="newList[price]" placeholder="price" id="price" required>

                    <div class="invalid-feedback">Enter your Price </div>
                </div>
                        
                <div class="col-md-8">
                    <label class="form-label"  for="country">Country</label>
                    <input class="form-control"  type="text" placeholder="country" name="newList[country]" id="country" required>

                    <div class="invalid-feedback">Enter a valid Country</div>
                </div>
           </div>         
                
            <div>
                <label class="form-label"  for="location">Location</label>
                        <input class="form-control"  type="text" placeholder="location" name="newList[location]" id="location" required>

                        <div class="invalid-feedback">Enter a valid Location</div>
            </div>            
                        
            <div class="new-list-submit-button">
                <button>Submit</button>
            </div>
            
        </form>
    </div>
    <script src="/js/script.js"></script>
</body>